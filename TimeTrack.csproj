<!--
  Changes:
  - Disabled SDK auto-generation of assembly attributes to avoid duplicates with Properties\AssemblyInfo.cs.
  - Keeps SDK-style WPF targeting .NET Framework 4.7.2 and System.Data.SQLite PackageReference.
-->
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net472</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>TimeTrack</RootNamespace>
    <AssemblyName>TimeTrack</AssemblyName>

    <!-- Avoid duplicate attributes with Properties\AssemblyInfo.cs -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <!-- Ensure all package outputs (incl. native) are copied -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    <!-- Your app metadata -->
    <StartupObject>TimeTrack.App</StartupObject>
    <ApplicationIcon>ExeIcon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <!-- Use the Core package that carries the native interop assets -->
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.118.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="time2.png" />
    <Content Include="ExeIcon.ico" />
    <None Include="App.config" />
  </ItemGroup>
</Project>