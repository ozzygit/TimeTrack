<Window x:Class="TimeTrack.ShortcutInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Keyboard Shortcut" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5" SizeToContent="Height">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Press the key combination you want to use:" 
                  FontSize="13" Margin="0,0,0,16"/>

        <Border Grid.Row="1" Background="White" BorderBrush="#E1E1E1" BorderThickness="1" 
               CornerRadius="4" Padding="12,16" MinHeight="60" Margin="0,0,0,16">
            <TextBlock x:Name="ShortcutTextBlock" Text="Press a key..." FontSize="16" 
                      FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OK_Click" IsDefault="True" Padding="16,6" Margin="0,0,8,0" Width="80" Height="32"/>
            <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" Padding="16,6" Width="80" Height="32"/>
        </StackPanel>
    </Grid>
</Window>