<Window x:Class="TimeTrack.EditEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrack"
        mc:Ignorable="d"
        Title="Edit Entry - TimeTrack v2" Height="260" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:TimeEntryUIConverter x:Key="TimeEntryUIConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center">Start</TextBlock>
        <TextBox   Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" Width="160"
                   Text="{Binding StartTime, Converter={StaticResource TimeEntryUIConverter}}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center">End</TextBlock>
        <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" Width="160"
                   Text="{Binding EndTime, Converter={StaticResource TimeEntryUIConverter}}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center">Ticket</TextBlock>
        <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" Width="200"
                   Text="{Binding CaseNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top">Notes</TextBlock>
        <TextBox   Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" Height="80" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                   Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="80" Margin="0,6,8,0" IsDefault="True" Click="OnSaveClick">Save</Button>
            <Button Width="80" Margin="0,6,0,0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
