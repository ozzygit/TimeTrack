<Window x:Class="TimeTrack.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options - TimeTrack" Width="600" MinWidth="500" MaxHeight="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#F5F5F5" SizeToContent="Height">

    <Window.Resources>
        <!-- Reuse same style resources from MainWindow -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E1E1E1"/>
        <SolidColorBrush x:Key="TextBrush" Color="#323130"/>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Keyboard Shortcuts" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>

        <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="1" CornerRadius="8" Padding="8">
            <DataGrid x:Name="ShortcutsGrid" AutoGenerateColumns="False" 
                     CanUserAddRows="False" CanUserDeleteRows="False"
                     GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F3F3F3"
                     RowBackground="White" AlternatingRowBackground="#FAFAFA"
                     HeadersVisibility="Column" SelectionMode="Single"
                     RowHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Action" Binding="{Binding DisplayName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Shortcut" Binding="{Binding DisplayText}" Width="200" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Change..." Click="ChangeShortcut_Click" Tag="{Binding ActionName}" 
                                       HorizontalAlignment="Center" Padding="8,2" Height="26"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Reset to Defaults" Click="ResetDefaults_Click" Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="OK" Click="OK_Click" IsDefault="True" Padding="24,6" Margin="0,0,8,0">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" Padding="24,6"/>
        </StackPanel>
    </Grid>
</Window>