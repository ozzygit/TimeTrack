<Window x:Class="TimeTrack.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options - TimeTrack" Width="800" Height="600" MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#005A9E"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E1E1E1"/>
        <SolidColorBrush x:Key="TextBrush" Color="#323130"/>
        <SolidColorBrush x:Key="SubtleBrush" Color="#605E5C"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,3,0"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F3F3F3"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E5F1FB"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                    <Setter Property="BorderBrush" Value="#D1D1D1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Section Description Style -->
        <Style x:Key="SectionDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource SubtleBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,16,0,0">
                <TextBlock Text="Settings" FontSize="16" FontWeight="SemiBold" 
                          Foreground="{StaticResource TextBrush}" Margin="16,0,16,12"/>
                
                <RadioButton x:Name="GeneralTab" Content="General" 
                            Style="{StaticResource NavButtonStyle}" 
                            IsChecked="True"
                            Checked="NavButton_Checked"/>
                
                <RadioButton x:Name="KeyboardTab" Content="Keyboard Shortcuts" 
                            Style="{StaticResource NavButtonStyle}"
                            Checked="NavButton_Checked"/>
                
                <RadioButton x:Name="AppearanceTab" Content="Appearance" 
                            Style="{StaticResource NavButtonStyle}"
                            Checked="NavButton_Checked"/>
            </StackPanel>
        </Border>

        <!-- Right Content Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid x:Name="ContentPanel" Margin="24">
                    <!-- General Settings Panel -->
                    <StackPanel x:Name="GeneralPanel" Visibility="Visible">
                        <TextBlock Text="General Settings" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Configure general application settings and preferences." 
                                  Style="{StaticResource SectionDescriptionStyle}"/>
                        
                        <Border Background="White" BorderBrush="{StaticResource BorderBrush}" 
                               BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Application Behavior" FontWeight="SemiBold" 
                                          FontSize="14" Margin="0,0,0,12"/>
                                
                                <CheckBox x:Name="ChkStartWithWindows" Content="Start with Windows" 
                                         FontFamily="Segoe UI" FontSize="13" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="ChkMinimizeToTray" Content="Minimize to system tray" 
                                         FontFamily="Segoe UI" FontSize="13" Margin="0,0,0,8"/>
                                
                                <CheckBox x:Name="ChkConfirmDelete" Content="Confirm before deleting entries" 
                                         FontFamily="Segoe UI" FontSize="13" IsChecked="True"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Keyboard Shortcuts Panel -->
                    <StackPanel x:Name="KeyboardPanel" Visibility="Collapsed">
                        <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Customize keyboard shortcuts for quick actions throughout the application." 
                                  Style="{StaticResource SectionDescriptionStyle}"/>
                        
                        <Border Background="White" BorderBrush="{StaticResource BorderBrush}" 
                               BorderThickness="1" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <DataGrid x:Name="ShortcutsGrid" Grid.Row="1" AutoGenerateColumns="False" 
                                         CanUserAddRows="False" CanUserDeleteRows="False"
                                         GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F3F3F3"
                                         RowBackground="White" AlternatingRowBackground="#FAFAFA"
                                         HeadersVisibility="Column" SelectionMode="Single"
                                         BorderThickness="0" Background="Transparent"
                                         RowHeight="40">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Action" Binding="{Binding DisplayName}" Width="*" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Shortcut" Binding="{Binding DisplayText}" Width="200" IsReadOnly="True"/>
                                        <DataGridTemplateColumn Header="" Width="100">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Change..." Click="ChangeShortcut_Click" Tag="{Binding ActionName}" 
                                                           HorizontalAlignment="Center" Padding="8,2" Height="26"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                        
                        <Button Content="Reset to Defaults" Click="ResetDefaults_Click" 
                               HorizontalAlignment="Left" Margin="0,12,0,0" Padding="12,6"/>
                    </StackPanel>

                    <!-- Appearance Panel -->
                    <StackPanel x:Name="AppearancePanel" Visibility="Collapsed">
                        <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Customize the look and feel of the application." 
                                  Style="{StaticResource SectionDescriptionStyle}"/>
                        
                        <Border Background="White" BorderBrush="{StaticResource BorderBrush}" 
                               BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Theme Options" FontWeight="SemiBold" 
                                          FontSize="14" Margin="0,0,0,12"/>
                                
                                <TextBlock Text="Theme features coming soon..." 
                                          Foreground="{StaticResource SubtleBrush}"
                                          FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Bottom Action Buttons -->
            <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderBrush}" 
                   BorderThickness="0,1,0,0" Padding="24,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK" Click="OK_Click" IsDefault="True" 
                           Style="{StaticResource PrimaryButton}" 
                           Padding="24,6" Margin="0,0,8,0"/>
                    <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" Padding="24,6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>