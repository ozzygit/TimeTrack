<Window x:Class="TimeTrack.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About TimeTrack v2" 
        Height="320" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#323130"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="TimeTrack v2" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- Version -->
        <TextBlock Grid.Row="1" 
                   x:Name="VersionText"
                   Text="Version: 1.0.0.0" 
                   FontSize="13"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="2" 
                   Text="A simple time tracking application for daily work entries." 
                   FontSize="13"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,15"/>
        
        <!-- Developer Info -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                <Run Text="Developed by " FontSize="12"/>
                <Hyperlink NavigateUri="https://github.com/Bukinnear" 
                           RequestNavigate="Hyperlink_RequestNavigate"
                           FontSize="12">
                    <Run Text="Jared Kinnear"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock Text="&#169; Jared Kinnear 2020 - 2025" 
                       FontSize="11" 
                       Foreground="#605E5C"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Spacer -->
        <Border Grid.Row="4"/>
        
        <!-- Database Location -->
        <StackPanel Grid.Row="5" Margin="0,0,0,15">
            <TextBlock Text="Database Location:" 
                       FontSize="11" 
                       Foreground="#605E5C"
                       Margin="0,0,0,5"/>
            <TextBlock TextWrapping="Wrap">
                <Hyperlink x:Name="DatabaseLocationLink" 
                           Click="DatabaseLocationLink_Click"
                           ToolTip="Click to open database folder in File Explorer">
                    <Run x:Name="DatabaseLocationText" 
                         Text="Loading..." 
                         FontFamily="Consolas" 
                         FontSize="10"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        
        <!-- Close Button -->
        <Button Grid.Row="6" 
                Content="Close" 
                Width="80" 
                Height="32"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                IsDefault="True"
                IsCancel="True">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Background" Value="#0078D4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="12,6">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#106EBE"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#005A9E"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
